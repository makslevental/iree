load("//build_tools/bazel:iree_bitcode_library.bzl", "iree_opencl_binary")
load("//build_tools/embed_data:build_defs.bzl", "iree_c_embed_data")

package(
    default_visibility = ["//visibility:public"],
    features = ["layering_check"],
    licenses = ["notice"],  # Apache 2.0
)

#===------------------------------------------------------------------------===#
# Common sources
#===------------------------------------------------------------------------===#

BITCODE_SRCS = glob([
    "*.c",
    "support/*.c",
])

BITCODE_HDRS = glob([
    "*.h",
    "support/*.h",
])

#===------------------------------------------------------------------------===#
# Architecture-specific Binaries
#===------------------------------------------------------------------------===#

iree_opencl_binary(
    name = "amdgcn_gfx1100",
    srcs = BITCODE_SRCS,
    arch = "gfx1100",
    internal_hdrs = BITCODE_HDRS,
    target = "amdgcn-amd-amdhsa",
)

#===------------------------------------------------------------------------===#
# Embedded Binary Table
#===------------------------------------------------------------------------===#

iree_c_embed_data(
    name = "binaries",
    srcs = [
        ":amdgcn_gfx1100.so",
    ],
    c_file_output = "binaries.c",
    flatten = True,
    h_file_output = "binaries.h",
    identifier = "iree_hal_amdgpu_device_binaries",
)
